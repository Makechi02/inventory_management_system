<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.AdminDashboardController">
    <left>
        <VBox alignment="CENTER" fillWidth="false" maxWidth="300.0" spacing="30.0" style="-fx-background-color: #2c3e50;">
            <Label text="Admin Dashboard" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <VBox alignment="CENTER" prefHeight="126.0" prefWidth="179.0" spacing="10.0">
                <Button mnemonicParsing="false" onAction="#handleManageItems" prefHeight="24.0" prefWidth="160.0" style="-fx-background-color: #34495e;" text="Manage Items" textFill="WHITE" VBox.vgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleManageCategories" prefHeight="24.0" prefWidth="160.0" style="-fx-background-color: #34495e;" text="Manage Categories" textFill="WHITE" VBox.vgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleManageUsers" prefWidth="160.0" style="-fx-background-color: #34495e;" text="Manage Users" textFill="WHITE" />
                <Button mnemonicParsing="false" onAction="#handleProfile" prefWidth="160.0" style="-fx-background-color: #34495e;" text="Profile" textFill="WHITE" />
            </VBox>
            <Button mnemonicParsing="false" prefWidth="160.0" style="-fx-background-color: #e36859;" text="Log out" textFill="WHITE" VBox.vgrow="ALWAYS" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <ScrollPane fx:id="mainContent" fitToHeight="true" fitToWidth="true">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ScrollPane>
    </center>
</BorderPane>
